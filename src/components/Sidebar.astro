---
const name = "bulw4rk";
const location = "Bilbao";
const email = "bulw4rk@protonmail.com";
const twitter = "https://x.com/bulw4rk";
const github = "https://github.com/bulw4rk";
const linkedin = "https://www.linkedin.com/in/josubarrientos";
---
<aside class="bio">
  <img src="/img/bulw4rk_logo.png" alt={name} width="100" height="100" class="avatar" loading="lazy" />
  <h2 class="bio-name">{name}</h2>
  <p class="bio-text">Offensive Security Notes — AdvSim · MalDev · OpSec · Tradecraft.</p>
  <ul class="bio-links">
    <!-- Location (schema.org) -->
    <li itemProp="homeLocation" itemScope itemType="https://schema.org/Place">
      <svg class="icon" viewBox="0 0 384 512" aria-hidden="true">
        <path d="M172.268 501.67C26.97 291.03 0 269.413 0 192 0 85.96 85.96 0 192 0s192 85.96 192 192c0 77.41-26.97 99.03-172.27 309.67a24 24 0 0 1-39.46 0zM192 272a80 80 0 1 0 0-160 80 80 0 0 0 0 160z"/>
      </svg>
      <span itemProp="name">{location}</span>
    </li>

    <!-- Email -->
    <li>
      <a href={`mailto:${email}`} rel="nofollow">
        <svg class="icon" viewBox="0 0 512 512" aria-hidden="true">
          <path d="M502.3 190.8 327.4 338.5c-20.7 17.3-50.1 17.3-70.8 0L9.7 190.8C3.9 186 .2 188.8.1 196L0 392c0 26.5 21.5 48 48 48h416c26.5 0 48-21.5 48-48V196c-.1-7.2-3.8-10-9.7-5.2zM256 320 496 128H16l240 192z"/>
        </svg>
        Email
      </a>
    </li>

    <!-- X / Twitter -->
    <li>
      <a href={twitter} target="_blank" rel="noopener noreferrer">
        <svg class="icon" viewBox="0 0 1200 1227" aria-hidden="true">
          <path d="M714 519 1161 0H1056L673 442 372 0H0l466 684L0 1227h105 363L741 760l317 467h372L714 519ZM514 700 403 544 137 116h171l225 315 112 156 275 384H742L514 700Z"/>
